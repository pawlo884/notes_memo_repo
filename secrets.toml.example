# Przykładowa konfiguracja secrets dla Streamlit Cloud
# Skopiuj ten plik jako .streamlit/secrets.toml lokalnie
# Lub wklej zawartość w Settings → Secrets na Streamlit Cloud

# ======================================
# OPENAI API
# ======================================
OPENAI_API_KEY = "sk-your-openai-api-key"

# ======================================
# QDRANT VECTOR DATABASE
# ======================================
QDRANT_URL = "https://your-qdrant-instance.cloud.qdrant.io"
QDRANT_API_KEY = "your-qdrant-api-key"

# ======================================
# POSTGRESQL DATABASE
# ======================================
POSTGRES_HOST = "your-db-host.db.ondigitalocean.com"
POSTGRES_PORT = "25060"
POSTGRES_DB = "defaultdb"
POSTGRES_USER = "doadmin"
POSTGRES_PASSWORD = "your-postgres-password"
POSTGRES_SSLMODE = "require"

# ======================================
# DIGITALOCEAN SPACES (OPCJONALNIE)
# ======================================
DO_SPACES_KEY = "your-digitalocean-spaces-key"
DO_SPACES_SECRET = "your-digitalocean-spaces-secret"
DO_SPACES_REGION = "fra1"
DO_SPACES_BUCKET = "your-bucket-name"

# ======================================
# SYSTEM LOGOWANIA (OPCJONALNIE)
# ======================================
# Jeśli chcesz zabezpieczyć aplikację hasłem
APP_USERNAME = "admin"
APP_PASSWORD = "twoje_haslo"

